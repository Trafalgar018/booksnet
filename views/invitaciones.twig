{% extends 'layout.twig' %}

{% block content %}
    <div class="container">

        <form class="form-signin" method="POST" action="{{ 'invitaciones' | url }}">
            <h2 class="form-signin-heading">Invitaciones</h2>
            <div class="form-group {% if errors['inputEmail'] %}has-error{% endif %}">
                <label for="email" class="sr-only">Email</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors, 'email') }}

            <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
        </form>

    </div> <!-- /container -->
{% endblock %}